<?xml version="1.0" encoding="utf-8"?>
<!--
  For more information on how to configure your ASP.NET application, please visit
  http://go.microsoft.com/fwlink/?LinkId=169433
  -->
<configuration>
  <configSections>
    <section name="modulesSection" type="Provisioning.Common.Configuration.ModulesSection, Provisioning.Common"/>
  </configSections>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
    <customErrors mode="Off" />
  </system.web>
  <system.webServer>
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
  </system.webServer>
  <modulesSection>
    <Modules>
      <Module name="RepositoryManager"
              type="Provisioning.Common.Data.Impl.SPSiteRequestManagerImpl, Provisioning.Common"
              connectionString=""/>
      <Module name="TemplateProvider"
              type="Provisioning.Common.Configuration.Template.Impl.XMLSiteTemplateManager, Provisioning.Common"
               connectionString=""/>
    </Modules>
  </modulesSection>
  <appSettings>
    <!--USED TO SET THE SITE REQUEST TO APPROVE, IF A CUSTOM WORKFLOW IS USED SET TO "false" WILL SET THE SITE REQUEST STATUS AS NEW-->
    <add key="AutoApproveSites" value="true" />
    <add key="ClientId" value="" />
    <add key="ClientSecret" value="" />
    <!--THE SITE THAT HOSTS THE SITE PROVISIONING APPLICATION-->
    <!--THE SITE URL OF THE APPLICATION-->
    <add key="SPHost" value="https://marascoonline.sharepoint.com/sites/siteprovisioning" />
    <!--THE TENANTADMIN URL-->
    <add key="TenantAdminUrl" value="https://marascoonline-admin.sharepoint.com" />
    <!-- REPOSITORY TO STORE THE SITE REQUEST. THIS WILL USE A SHAREPOINT LIST THAT IS LOCATED ON THE SPHOST -->[
    <add key="RepositoryManagerType" value="Provisioning.Common.Data.Impl.SPSiteRequestManagerImpl, Provisioning.Common" />
    <add key="TemplateProviderType" value="Provisioning.Common.Configuration.Template.Impl.XMLSiteTemplateManager, Provisioning.Common" />
    <!-- USED TO ADD THE HOST NAME TO THE AUDIENCE LIST IN TOKEN HELPER WHICH IS USED TO ADD THE DOMAIN TO THE VALIDATION CHECK. -->
    <add key="HostedAppHostNameOverride" value="spsiteprov.azurewebsites.net" />
  </appSettings>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <!--Used by app for SharePoint-->
        <binding name="secureBinding">
          <security mode="Transport" />
        </binding>
      </basicHttpBinding>
    </bindings>
    <protocolMapping>
      <add binding="basicHttpBinding" scheme="https" bindingConfiguration="secureBinding" />
    </protocolMapping>
  </system.serviceModel>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>